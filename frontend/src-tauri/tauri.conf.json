{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "VasoactiveDrugs",
  "version": "0.1.0",
  "identifier": "com.vasoactive.drugs",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Калькулятор вазоактивных препаратов",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://192.168.1.100:8000 http://localhost:8000 http://127.0.0.1:8000 https://192.168.1.100:8443; img-src 'self' http://192.168.1.100:8000 http://localhost:8000 https://192.168.1.100:8443 data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    }
  },
  "plugins": {
    "http": {
      "enabled": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
